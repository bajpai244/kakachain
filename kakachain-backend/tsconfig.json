{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "outDir": "build",
    "baseUrl": "./types",
    "moduleResolution": "node",
    "importHelpers": true,
    "skipLibCheck": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": false,
  },
  "include": ["src/**/*.ts", "util/*.ts", "db/**/*.json"],
  "exclude": ["node_modules/"],
}
